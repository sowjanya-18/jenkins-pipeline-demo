library("sowji-jenkins-shared-lib")
pipeline {
    agent any

    stages {
        stage('Hello') {
            steps {
                script {
                test.add("2","3")
                sh 'echo "Hello World" > hello.txt'
               }
            }
        }
        stage("build") {
            steps {
                sh 'echo "my son name is bhavi" > build.txt'
            }
        }
        stage ("deploy") {
            steps {
                sh 'echo "my husband name is bhaskar" > deploy.txt'
            }
        }
   }
   post {
        always {
            archiveArtifacts artifacts: '*.txt', fingerprint: true
        }
   }
}
