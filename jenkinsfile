pipeline {
    agent any

    stages {
        stage('Hello') {
            steps {
                echo 'Hello World' > hello.txt
            }
        }
        stage("build") {
            steps {
                echo "my son name is bhavi" > build.txt
            }
        }
        stage ("deploy") {
            steps {
                echo "my husband name is bhaskar" > deploy.txt
            }
        }
        post {
        always {
            archiveArtifacts artifacts: '*.txt', fingerprint: true
        }
    }
    }
}
